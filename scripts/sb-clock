#!/bin/sh

clock=$(date +"%I")

case "$clock" in
	"00") icon="🕛" ;;
	"01") icon="🕐" ;;
	"02") icon="🕑" ;;
	"03") icon="🕒" ;;
	"04") icon="🕓" ;;
	"05") icon="🕔" ;;
	"06") icon="🕕" ;;
	"07") icon="🕖" ;;
	"08") icon="🕗" ;;
	"09") icon="🕘" ;;
	"10") icon="🕙" ;;
	"11") icon="🕚" ;;
	"12") icon="🕛" ;;
esac

case $BLOCK_BUTTON in
	1) notify-send "This Month" "$(ncal -M)" ;;
	2) setsid -f "$TERMINAL" -e task ;;
	3) notify-send "📅 Time/date module" "\show the month via \`cal\`" ;;
esac

out_date="$(date +"%d/%m/%Y %H:%M")"
echo '['"$out_date"']'
